@startuml Diagramme de Cas d'Utilisation - Gestion des Déplacements

left to right direction
skinparam packageStyle rectangle

actor "Employé" as emp
actor "Manager" as mgr
actor "DAF" as daf

rectangle "Système de Gestion des Déplacements" {
    
    usecase "Créer une demande" as UC1
    usecase "Soumettre une demande" as UC2
    usecase "Consulter ses demandes" as UC3
    usecase "Annuler une demande" as UC4
    
    usecase "Valider une demande" as UC5
    usecase "Refuser une demande" as UC6
    
    usecase "Traiter une demande" as UC7
    usecase "Terminer une demande" as UC8
    usecase "Gérer la configuration" as UC9
}

' Relations Employé
emp --> UC1
emp --> UC2
emp --> UC3
emp --> UC4

' Relations Manager
mgr --> UC5
mgr --> UC6

' Relations DAF
daf --> UC7
daf --> UC8
daf --> UC9

' Héritage
mgr --|> emp
daf --|> mgr

@enduml

